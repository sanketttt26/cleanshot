{
  "manifest_version": 3,
  "name": "Framy - Screenshot Background",
  "version": "1.0.0",
  "description": "Capture screenshots and add beautiful backgrounds with one click. Perfect for social media, blogs, and documentation.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/capture.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Framy - Capture Screenshot"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "contextMenus",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture-visible": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "windows": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Capture visible tab screenshot"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}